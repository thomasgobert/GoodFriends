<resources>

	<!-- Base application theme, dependent on API level. This theme is replaced 
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, 
			while customizations related to backward-compatibility can go here. -->
	</style>


	<color name="light_purple">#9a59b5</color>
	<color name="very_light_purple">#509a59b5</color>
	<color name="grey">#bec3c7</color>	<color name="custom_bg">#FFFFFF</color>
	<style name="custom" parent="@android:style/Theme.Light.NoTitleBar">
		<item name="android:windowBackground">@color/custom_bg</item>
		<item name="android:textColor">#000000</item>
	</style>

	<style name="Numbers">
		<item name="android:inputType">number</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="Large">
		<item name="android:textSize">22sp</item>

	</style>
	<style name="Small">
		<item name="android:textSize">12sp</item>
	</style>

</resources>